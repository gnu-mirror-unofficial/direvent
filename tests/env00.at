AT_SETUP([clear])
AT_KEYWORDS([environ env00 env_clear])

AT_DIREVENT_TEST([
debug 10;
watcher {
	path $cwd/dir;
	event create;
        environ {
		clear;
	};
	command "$TESTDIR/envdump -AD -f $outfile -k\$self_test_pid";
	option (stdout,stderr);
}
],
[touch dir/testfile],
[outfile=$cwd/dump
mkdir dir
VAR1=foo
VAR2=bar
export VAR1 VAR2
],
[
cat $outfile
],
[0],
[# Dump of execution environment
# Environment
# End
])

AT_CLEANUP
