AT_SETUP([Create recursive])
AT_KEYWORDS([create createrec])

AT_DIREVENT_TEST([
debug 10;
watcher {
	path $cwd/dir recursive;
	event create;
	command "$SRCDIR/listname $outfile $cwd/expout";
	option (stdout,stderr);
}
],
[cp -r a dir
],
[cat > expout <<EOT
$cwd/dir/a
$cwd/dir/a/af
$cwd/dir/a/af1
$cwd/dir/a/b
$cwd/dir/a/b/bf
$cwd/dir/a/b/c
EOT
outfile=$cwd/dump
mkdir dir
mkdir a
mkdir a/b
mkdir a/b/c
> a/af
> a/af1
> a/b/bf
],
[sort $outfile
],
[0],
[expout])

AT_CLEANUP
