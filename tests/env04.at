AT_SETUP([eval])
AT_KEYWORDS([environ env04 env_eval])

AT_DIREVENT_TEST([
debug 10;
watcher {
	path $cwd/dir;
	event create;
        environ {
	      eval "\${FOO:=\$BAR}";
	      eval "\${BAZ:=qux}";
	};
	command "$TESTDIR/envdump -AD -s -i FOO:BAR:BAZ -f $outfile -k\$self_test_pid";
	option (stdout,stderr);
}
],
[touch dir/testfile],
[outfile=$cwd/dump
mkdir dir
unset FOO
BAR=bar
BAZ=baaz
export BAR BAZ
],
[
cat $outfile
],
[0],
[# Dump of execution environment
# Environment
BAR=bar
BAZ=baaz
FOO=bar
# End
])

AT_CLEANUP
