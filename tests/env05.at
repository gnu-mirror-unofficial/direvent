AT_SETUP([global])
AT_KEYWORDS([environ env05 env_global])

AT_DIREVENT_TEST([
debug 10;
environ {
      clear;
      keep FOO;
      set "BAZ=$BAR";
};
watcher {
	path $cwd/dir;
	event create;
	command "$TESTDIR/envdump -AD -s -i FOO:BAR:BAZ -f $outfile -k\$self_test_pid";
	option (stdout,stderr);
}
],
[touch dir/testfile],
[outfile=$cwd/dump
mkdir dir
FOO=foo
BAR=bar
export FOO BAR BAZ
],
[
cat $outfile
],
[0],
[# Dump of execution environment
# Environment
BAZ=bar
FOO=foo
# End
])

AT_CLEANUP
